{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "jsx": "react-jsx",         // React 18+ w/ the new JSX transform
      "strict": true,            // flip to true once you're comfortable
      "allowJs": true,           // lets TS compile your .js files for now
      "checkJs": false,
      "outDir": "dist",
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": { "@/*": ["*"] }, // example alias
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "types": []
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  